{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["src/types/*"],
      "@/*": ["src/*"],
      "images/*": ["src/assets/images/*"]
    },
    "types": [
      "vite/client",
      "vue",
      "node",
      "jquery",
      "swiper",
      "@types/bootstrap"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
